{
    "include": ["src/*.ts", "src/**/*.ts"],
    "compilerOptions": {
        "incremental": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "strict": true,
        "inlineSourceMap": true,
        "sourceMap": false,
        "outDir": "dist",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "skipLibCheck": true
    }
}